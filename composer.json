{
    "name": "pauhoms/base-slimframework",
    "description": "Base repository for api slim framework projects",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "pauhoms",
            "email": "pauhomsjimenez1@gmail.com"
        }
    ],
    "minimum-stability": "stable",

    "require": {
        "slim/slim": "^4.7",
        "slim/psr7": "^1.3",
        "php-di/slim-bridge": "^3.1",
        "ext-json": "*",
        "doctrine/orm": "^2.9",
        "ramsey/uuid": "^4.1",
        "lambdish/phunctional": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "overtrue/phplint": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": ["app"],
            "Authentication\\": ["src/Authentication"],
            "Shared\\": ["src/Shared"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": ["tests"]
        }
    }
}
